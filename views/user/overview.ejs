<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/group.css">


</head>

<body>
    <%- include ('../partials/navbar.ejs') %>

    <div class="col-md-12 mob-clearfix margin-80">

        <input type="hidden" id="name-user" value="<%= user.username %>">
        <input type="hidden" id="image-user" value="<%= user.userImage %>">
        <div class="col-md-12">
            <div class="chat_container">
                <div class="row">
                    <!-- LEFT -->

                    <div class="col-sm-4 col-md-3">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="profile-sidebar">
                                        <div class="img-container">
                                            <% if(dat.userImage == null || dat.userImage == undefined || dat.userImage == "") {%>
                                                <img src='/profileUploads/default.png' class="img-responsive img-user" id="show_img">
                                            <% }else { %>
                                                <img src='/profileUploads/<%= dat.userImage %>' class="img-responsive img-user" id="show_img">
                                            <% }%>
                                        </div>
                                
                                    <div class="profile-usertitle">
                                        <div class="profile-usertitle-name">
                                            <%= dat.fullname %>
                                        </div>
                                        <div class="profile-usertitle-job">
                                            @<%= dat.username %>
                                        </div>
                                    </div>
                              
                                    <div class="profile-usermenu">
                                        <ul class="nav">
                                            <li class="active">
                                                <a href="/profile/<%= user.username %>" style="color:#4aa1f3 !important">
                                                    <i class="fa fa-home" style="color:#4aa1f3 !important"></i>
                                                    Overview
                                                </a>
                                            </li>

                                        </ul>
                                    </div>

                                </div>
                            </div>

                        </div>


                    </div>


                    <!--MIDDLE-->
                    <div class="col-sm-8 col-md-9 mob-50">
                        <span id="error" class="text-center"></span>
                        <form method="post">

                            <div>
                                <div class="user-display">
                            
                                    <h3 class="user-display-head" style="color:#4aa1f3 !important">
                                        Favourite Clubs</h3>
                                    <hr />
                                    <% _.forEach(dat.favClub, function(val){ %>
                                    <p style="margin-bottom:30px; color:#4aa1f3;">
                                        <span class="glyphicon glyphicon-check" style="color:gray;"></span>
                                        <%= val.clubName %>
                                    </p>
                                    <% }) %>
                                </div>
                            </div>
                            

                            <div style="margin-top: 20px;">
                                <div class="user-display">
                            
                                    <h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite Playes</h3>
                                    <hr />
                                    <% _.forEach(dat.favPlayer, function(val2){ %>
                                    <p style="margin-bottom:30px; color: #4aa1f3;">
                                        <span class="glyphicon glyphicon-check" style="color:gray;"></span>
                                        <%= val2.playerName %>
                                    </p>
                                    <% }) %>
                                </div>
                            </div>
                    

                            <div style="margin-top: 20px;">
                                <div class="user-display">
                            
                                    <h3 class="user-display-head" style="color:#4aa1f3 !important">
                                        Favourite National Teams</h3>
                                    <hr />
                                    <% _.forEach(dat.favNationTeam, function(val3){ %>
                                        <p style="margin-bottom:30px; color: #4aa1f3;">
                                            <span class="glyphicon glyphicon-check" style="color:gray;"></span>
                                            <%= val3.teamName %>
                                        </p>
                                    <% }) %>
                    
                                </div>
                            </div>

                        </form>
                    </div>


                </div>

            </div>
        </div>

    </div>

    
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>  
<script src='/socket.io/socket.io.js'></script>
<script src="/js/messageLink.js"></script>
<script src="/js/group/sendrequest.js"></script>
<script src="/js/home.js"></script>
<script src="/js/user/interest.js"></script>
<script src="/js/global.js"></script>
<script src="/js/deparam.js"></script>
</body>

</html>
